<%- include('partials/header'); -%>

<!-- ACTIONS -->

<section id="actions" class="py-4 mb-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a href="/addProduct" class="btn btn-primary btn-block">
          <i class="fas fa-plus"></i> Ajouter produit
        </a>
      </div>
      <div class="col-md-3">
        <a href="/searchProduct" class="btn btn-success btn-block">
          <i class="fas fa-plus"></i> Modifier produit
        </a>
      </div>
      <div class="col-md-3">
        <a href="/deleteProduct" class="btn btn-warning btn-block">
          <i class="fas fa-minus"></i> Supprimer produit
        </a>
      </div>
    </div>

    <%- include('partials/messages'); -%>
  </div>
</section>

<!-- SEARCH -->

<form action="/searchProduct" method="POST">
  <section id="search" class="py-4 mb-4 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-6 ml-auto">
          <div class="input-group">
            <input
              type="text"
              class="form-control"
              placeholder="Enter le code barre du produit recherche..."
              name="codeBarre"
            />
            <div class="input-group-append">
              <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>

